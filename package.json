{
  "name": "@mikro-orm/sql-highlighter",
  "version": "1.0.0",
  "description": "Node.js SQL highlighter for CLI based on doctrine/sql-formatter.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mikro-orm/sql-highlighter.git"
  },
  "keywords": [
    "sql",
    "nodejs",
    "highlight",
    "tokenizer"
  ],
  "author": "Martin AdÃ¡mek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikro-orm/sql-highlighter/issues"
  },
  "homepage": "https://mikro-orm.io",
  "engines": {
    "node": ">= 10.13.0"
  },
  "scripts": {
    "build": "yarn clean && yarn compile && yarn copy",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "copy": "ts-node -T ./scripts/copy.ts",
    "lint": "eslint src/*.ts",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "modulePathIgnorePatterns": [
      "dist/package.json",
      "<rootDir>/package.json"
    ]
  },
  "dependencies": {
    "ansi-colors": "^4.1.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "~5.12.0",
    "@typescript-eslint/parser": "~5.12.0",
    "eslint": "^7.6.0",
    "jest": "^27.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.0"
  }
}
